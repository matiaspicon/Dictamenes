<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dictamenes</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body class="p-0">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="@Url.Action("Index","Dictamenes")">Dictamenes</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    @if (User.IsInRole("Consulta"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Index","Dictamenes")">Home</a>
                        </li>
                    }
                    else if (User.IsInRole("Carga"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Index","Dictamenes")">Home</a>
                        </li>
                    }
                    else if (User.IsInRole("Edicion"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Index","Dictamenes")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Menu", "Campos")">Administracion de Campos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Index", "SujetosObligados")">Administracion de Sujetos Obligados</a>
                        </li>
                    }

                </ul>
            </div>
            <div class="float-right">
                <ul class="navbar-nav mr-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <button class="btn dropdown-toggle" type="button" id="menuOpciones" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @User.Identity.Name<span class="caret ml-1"></span>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="menuOpciones">                                
                                <div class="dropdown-divider"></div>
                                <a href="@Url.Action("Logout", "Login")" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt"></i> Salir
                                </a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="ml-1">
                            <a href="@Url.Action("Login", "Login")" class="btn btn-success">
                                Ingresar
                            </a>
                        </li>
                    }
                </ul>
                </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-2">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mx-auto py-3">
        <div class="container">
            &copy; 2021 - Dictamenes
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>



</html>
