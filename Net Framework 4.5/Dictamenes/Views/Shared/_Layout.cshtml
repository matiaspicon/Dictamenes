<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dictamenes</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @using Dictamenes.Models
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css">
</head>
<body class="p-0">
    <header>
        <nav class="navbar navbar-expand-xl navbar-light bg-light">
            <a class="navbar-brand">Dictamenes</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbarCollapse" class="collapse navbar-collapse justify-content-start">
                <div class="navbar-nav">
                    @if (Session["rol"] != null && (string)Session["rol"] == Rol.CONSULTAR.ToString())
                    {

                        <a class="nav-link text-dark" href="@Url.Action("Index","Dictamenes")">Listado de Dictamenes</a>

                    }
                    else if (Session["rol"] != null && (string)Session["rol"] == Rol.CARGAR.ToString())
                    {

                        <a class="nav-link text-dark" href="@Url.Action("Index","Dictamenes")">Listado de Dictamenes</a>


                        <a class="nav-link text-dark" href="@Url.Action("Menu", "Campos")">Tablas maestras</a>


                        <a class="nav-link text-dark" href="@Url.Action("Index", "SujetosObligados")">Sujetos Obligados</a>


                        <a class="nav-link text-dark" href="@Url.Action("Index", "Denunciantes")">Denunciantes</a>

                    }

                </div>
                <div class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="nav-item dropdown">
                            <button class="btn dropdown-toggle px-sm-0" type="button" id="menuOpciones" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @User.Identity.Name <span class="caret"></span>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="menuOpciones">
                                <a href="@Url.Action("Logout", "Login")" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt"></i> Salir
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </nav>

    </header>
    <div class="container-fluid" style="max-width:1320px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="footer py-3">
            <div class="container">
                &copy; 2021 - Dictamenes
            </div>
        </footer>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>



</html>
