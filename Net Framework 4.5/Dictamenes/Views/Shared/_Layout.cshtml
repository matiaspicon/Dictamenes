<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dictámenes </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" />
    <link rel="icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
    @using Dictamenes.Models
    @{string rol = FrameworkMVC.Security.LoginService.Current.GrupoNombre;}
</head>
<body class="p-0">
    <header>
        <nav class="navbar navbar-expand-xl navbar-light bg-light">        
            <div class="logo-image w-25 mr-2">                
                <img src="@Url.Content("~/Content/Imagenes/icon-ssn.png")" class="img-fluid">
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbarCollapse" class="collapse navbar-collapse justify-content-start">
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.Raw(FrameworkMVC.Security.LoginService.Current.Menu)                   
                }
                <div class="navbar-nav ml-auto ">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="nav-item dropdown ">
                            <a class="nav-link dropdown-toggle px-3" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-person-fill"></i>    @User.Identity.Name
                            </a>
                            <div class="dropdown-menu dropdown-menu-right ml-auto" aria-labelledby="navbarDropdownMenuLink">
                                <a href="@Url.Action("Logout", "Login")" class="dropdown-item">
                                     Cerrar sesion <i class="bi bi-box-arrow-in-right"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </nav>

    </header>
    <div class="container-fluid" style="max-width:1320px">
        <main role="main" class="pb-3 m-3">
            @RenderBody()
        </main>        
    </div>   
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>



</html>
