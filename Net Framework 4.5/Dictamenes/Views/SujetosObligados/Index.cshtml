@model IEnumerable<Dictamenes.Models.SujetoObligado>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de todos los Sujetos Obligados</h2>

<p class="">
    <a class="btn btn-primary" href="@Url.Action("Create")"> <i class="bi bi-plus-lg"></i>     Cargar nuevo Sujeto Obligados</a>
</p>
<table id="dataTable" class="table table-striped table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.CuilCuit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RazonSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoSujetoObligado)
            </th>
            <th class="no-sort">
                @Html.DisplayNameFor(model => model.EstaHabilitado)
            </th>
            <th class="no-sort"></th>
        </tr>
    </thead> 
   
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CuilCuit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RazonSocial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoSujetoObligado.Descripcion)
                </td>
                <td>
                    <i class="bi @(item.EstaHabilitado ? "bi-check-circle-fill text-success" : "bi-x-circle-fill text-danger" )"></i>
                </td>
                <td class="row justify-content-end mx-0">
                    <a class="btn btn-warning" href="@Url.Action("Edit", new { id = item.Id })"><i class="bi bi-pencil-square"></i></a>
                </td>
            </tr>
        }
    </tbody>
    

</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "ordering": true,
                columnDefs: [{
                    orderable: false,
                    targets: "no-sort"
                }],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
                }
            });
        });
    </script>
}