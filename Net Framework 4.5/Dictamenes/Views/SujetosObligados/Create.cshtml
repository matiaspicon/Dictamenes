@model Dictamenes.Models.SujetoObligado

@{
    ViewBag.Title = "Crear";
}

<h2>Crear Sujeto Obligado</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.LabelFor(model => model.CuilCuit, htmlAttributes: new { @class = "control-label col-md-3 align-self-end" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.CuilCuit, new { htmlAttributes = new { @class = "form-control col-auto" } })
                @Html.ValidationMessageFor(model => model.CuilCuit, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.RazonSocial, htmlAttributes: new { @class = "control-label col-md-3 align-self-end" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.RazonSocial, new { htmlAttributes = new { @class = "form-control col-auto" } })
                @Html.ValidationMessageFor(model => model.RazonSocial, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.IdTipoSujetoObligado, "Tipo de Sujeto Obligado", htmlAttributes: new { @class = "control-label col-md-3 align-self-end" })
            <div class="col-md-9">
                @Html.DropDownList("IdTipoSujetoObligado", null, htmlAttributes: new { @class = "form-control col-auto" })
                @Html.ValidationMessageFor(model => model.IdTipoSujetoObligado, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-9">
                <div class="checkbox">
                    @Html.CheckBox("EstaHabilitado", true) @Html.LabelFor(model => model.EstaHabilitado, htmlAttributes: new { @class = "control-label col-md-3 align-self-end" })
                </div>
            </div>
        </div>
        <div class="row justify-content-end">
            <div class="col-lg-6 col-md-8 row justify-content-end">
                <a class="col-4 btn btn-secondary m-1" onclick="history.go(-1);"><i class="bi bi-arrow-left"></i>  Volver atrás</a>
                <input type="submit" value="Cargar" class="btn btn-primary m-1 col-4" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
