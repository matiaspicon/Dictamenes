
@{
    ViewBag.Title = "Cargar Asuntos";
}

<h2>CargarAsuntos</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        @Html.Label("Ingrese el JSON con todos los asuntos que desea agregar", htmlAttributes: new { @class = "control-label col-md-3 align-self-end" })
        <div class="col-md-9">
            @Html.Editor("JSONAsuntos", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-9">
            <a class="col-3 btn btn-secondary" onclick="history.go(-1);"><i class="bi bi-arrow-left"></i>  Volver atras</a>
            <button type="submit" class="btn btn-success m-1"><i class="bi bi-check2-square"></i>  Guardar </button>
        </div>
    </div>
}