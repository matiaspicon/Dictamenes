@model Dictamenes.Models.SujetoObligado

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Sujeto Obligado Denunciante</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>SujetoObligado</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group row">
        @Html.LabelFor(model => model.CuilCuit, htmlAttributes: new { @class = "control-label col-md-3 align-self-end" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.CuilCuit, new { htmlAttributes = new { @class = "form-control col-auto" } })
            @Html.ValidationMessageFor(model => model.CuilCuit, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-3 align-self-end" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control col-auto" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "control-label col-md-3 align-self-end" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control col-auto" } })
            @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.HiddenFor(model => model.IdTipoSujetoObligado)
    @Html.HiddenFor(model => model.EstaHabilitado)

    <div class="row justify-content-end">
        <div class="col-lg-6 col-md-8 row justify-content-end">
            <a class="col-4 btn btn-secondary m-1" onclick="history.go(-1);"><i class="bi bi-arrow-left"></i>  Volver atras</a>
            <button type="submit" class="btn btn-success col-4 m-1"><i class="bi bi-check2-square"></i>  Guardar </button>
        </div>
    </div>

</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
