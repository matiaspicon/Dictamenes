@model Dictamenes.Models.Dictamen

@{
    ViewData["Title"] = "Create";
}

<h1>Cargar archivo</h1>

<h4>Dictamen</h4>
<hr />

<div class="justify-content-center">
    <p>Si no tiene el archivo del Dictamen, puede continuar sin cargar el archivo</p>
    <a class="btn btn-outline-danger" asp-action="Create">Continua sin archivo</a>
</div>

<hr style="width:50%;text-align:left;margin-left:0">

<div class="row">
    <div class="col-6">

        <form asp-action="CargarFile" enctype="multipart/form-data">
            <div class="form-group">
                <p class="">Ingrese el Archivo PDF</p>
                <input type="file" class="" accept=".pdf" name="file" required>
            </div>

            <div class="form-group">
                <div class="col row justify-content-start">
                    <a class="col-auto btn btn-outline-secondary m-1" asp-action="Index">Volver atras</a>
                    <input type="submit" value="Continuar con Archivo" class="col-auto btn btn-primary m-1" />
                </div>
            </div>
        </form>

    </div>    
</div>




@section Scripts {
    @{Html.RenderPartial("_ValidationScriptsPartial");}
}