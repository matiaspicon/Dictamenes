@model Dictamenes.Models.Dictamen

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Dictamen</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <a class="btn btn-outline-success" asp-action="Create">Continuar sin cargar archivo</a>

        <form asp-action="CargarFile" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label">Ingrese el Archivo PDF</label>
                <input type="file" name="file" required />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Cargar archivo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}